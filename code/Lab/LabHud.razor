
@using Sandbox;
@using Sandbox.UI;
@inherits Sandbox.UI.RootPanel
@attribute [Sandbox.UI.StyleSheet]

<root class="labhud">
	<chatbox></chatbox>
	<selectionbox></selectionbox>  

	<div class="panel top right">

		<ConvarButtonGroup ConvarName="host_timescale" class="buttongroup">
			<button value="0.0" icon="pause"></button>
			<button value="0.1" icon="navigate_next"></button>
			<button value="1.0" icon="play_arrow"></button>
			<button value="5.0" icon="fast_forward"></button>
			<button value="10.0" icon="skip_next"></button>
		</ConvarButtonGroup>

		<button @onmousedown="@(() => ConsoleSystem.Run("npc_clear"))" icon="delete_forever">Clear</button>
		<button @onmousedown=@(() => ConsoleSystem.SetValue("nav_drawpath", DrawPath)) icon="timeline">Draw Paths</button>
	</div>


	<div class="panel top left">
		<ConvarButtonGroup ConvarName="lab_toolmode" class="list">
			<button value="npc" icon="emoji_people">Create Npc</button>
			<button value="seek" icon="flag">Seek</button>
			<button value="wander" icon="sync">Wander</button>
			<button value="pathvis" icon="visibility">Path Vis</button>
		</ConvarButtonGroup>
	</div>
</root>

@code {
	string DrawPath => ConsoleSystem.GetValue("nav_drawpath", "False") == "False" ? "True" : "False";
}


